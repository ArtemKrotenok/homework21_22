<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="artemkrotenok@gmail.com">
        <createTable tableName="item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="description" type="varchar(100)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="artemkrotenok@gmail.com">
        <createTable tableName="item_details">
            <column name="item_id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="price" type="varchar(100)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="artemkrotenok@gmail.com">
        <addForeignKeyConstraint baseTableName="item_details"
                                 baseColumnNames="item_id"
                                 constraintName="fk_item_details_to_item"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="item"
                                 validate="true"/>
    </changeSet>
    <changeSet id="4" author="artemkrotenok@gmail.com">
        <createTable tableName="shop">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="location" type="varchar(100)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="artemkrotenok@gmail.com">
        <createTable tableName="item_shop">
            <column name="item_id" type="BIGINT"/>
            <column name="shop_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="6" author="artemkrotenok@gmail.com">
        <addPrimaryKey tableName="item_shop"
                       columnNames="item_id, shop_id"
                       constraintName="pk_item_shop"
        />
    </changeSet>
    <changeSet id="7" author="artemkrotenok@gmail.com">
        <addForeignKeyConstraint baseTableName="item_shop"
                                 baseColumnNames="item_id"
                                 constraintName="fk_item_shop_to_item"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="item"
                                 validate="true"/>
    </changeSet>
    <changeSet id="8" author="artemkrotenok@gmail.com">
        <addForeignKeyConstraint baseTableName="item_shop"
                                 baseColumnNames="shop_id"
                                 constraintName="fk_item_shop_to_shop"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="shop"
                                 validate="true"/>
    </changeSet>
</databaseChangeLog>
